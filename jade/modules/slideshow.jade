		at src=
		vat "ruta de la imagen"
		at alt=
		vat "Texto de ayuda de imagen"
		at caption=
		vat "Caption de la imagen"
		tg &gt&lt/slider&gt
		br
		tg   &lt/sliders&gt
		cm   &lt!-- controles --&gt
		tg   &lticon
		at class=
		vat "previus-slide"
		tg &gt&lt/icon&gt
		br
		tg   &lticon
		at class=
		vat "next-slide"
		tg &gt&lt/icon&gt
		br
