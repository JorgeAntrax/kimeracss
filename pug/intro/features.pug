include ../main/_variables
modal#cambios.is-fluid.is-slide-down
	content
		close(modal="#cambios" style="z-index: 2000")
		row
			column.tablet-8.padding-2#cambios-imagen
				.is-visible-tablet
					responsive.is-square-128.margin-v-3
						img(src=urlimage+"logo-white.png", alt="level")
				hgroup
					h1 Level CSS
					h4.subtitle Registro de cambios
				buttons.margin-t-2.is-visible-tablet
					a(href="https://github.com/JorgeAntrax/level").button.is-rounded.is-success-inverse Ver en Github
					a(href="https://github.com/JorgeAntrax/level/stargazers").button.is-rounded.is-info-invert
						icon
							i.fa.fa-star
						span Github 10
				item#version-text.padding-1
					group.is-inline.op-07
						a(href=facebook).is-text-cloud
							icon.is-medium: i.fa.fa-facebook
						a(href=twitter).is-text-cloud
							icon.is-medium: i.fa.fa-twitter
						a(href=github).is-text-cloud.is-hidden-tablet
							icon.is-medium: i.fa.fa-github
					span Latest •
						b  #{version}
